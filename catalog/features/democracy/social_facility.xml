<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<doc-part xmlns="http://map.osm.me/osm-doc-part">
    <feature name="social_facility">
        <title>Социальное учреждение</title>
        <tags>
            <tag>
                <key>amenity</key>
                <val value="social_facility"/>
            </tag>
        </tags>
        <trait>poi</trait>
        <more-tags>
            <tag xmlns:ns0="http://map.osm.me/osm-doc-part" ns0:tag-value-type="enum">
                <title>Целевая группа</title>
                <key>social_facility:for</key>
                <val value="unemployed">
                    <title>безработные</title>
                </val>
                <val value="underprivileged">
                    <title>малообеспеченные</title>
                </val>
                <val value="abused">
                    <title>жертвы насилия</title>
                </val>
                <val value="victim">
                    <title>жертвы преступности</title>
                </val>
                <val value="migrant">
                    <title>мигранты, беженцы</title>
                </val>
                <val value="drug_addicted">
                    <title>наркозависимые</title>
                </val>
                <val value="child">
                    <title>дети</title>
                </val>
                <val value="mental_health">
                    <title>люди с психическими проблемами</title>
                </val>
                <val value="orphan">
                    <title>сироты</title>
                </val>
                <val value="diseased">
                    <title>больные конкретными заболеваниями</title>
                </val>
                <val value="homeless">
                    <title>бездомные</title>
                </val>
                <val value="juvenile">
                    <title>подростки</title>
                </val>
                <val value="disabled">
                    <title>инвалиды</title>
                </val>
                <val value="senior">
                    <title>пожилые</title>
                </val>
            </tag>
            <tag xmlns:ns0="http://map.osm.me/osm-doc-part" ns0:tag-value-type="enum">
                <title>Тип</title>
                <key>social_facility</key>
                <val value="group_home">
                    <title>учреждение группового проживания</title>
                </val>
                <val value="ambulatory_care">
                    <title>учреждение, занимающееся поддержкой на дому</title>
                </val>
                <val value="food_bank">
                    <title>учреждение без проживания, занимающееся раздачей пищевых рационов или готовых блюд</title>
                </val>
                <val value="workshop">
                    <title>учреждение без проживания, обеспечивающее работой людей с проблемами, реабилитационный центр</title>
                </val>
                <val value="shelter">
                    <title>учреждение временного проживания (ночлега)</title>
                </val>
                <val value="outreach">
                    <title>учреждение без проживания, занимающееся предоставлением социальных услуг на бесплатной основе</title>
                </val>
                <val value="assisted_living">
                    <title>учреждение группового проживания</title>
                </val>
            </tag>
        </more-tags>
        <icon>social_facility.png</icon>
        <applyed-to>node area</applyed-to>
    </feature>
</doc-part>
